      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      color: #fff;
    }
    .login-container {
      background-color: rgba(25, 20, 50, 0.9); /* Darker, slightly transparent */
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      width: 100%;
      max-width: 400px;
      text-align: center;
    }
    .login-container h1 {
      color: #FEBB0B; /* Accent color */
      margin-bottom: 10px;
      font-size: 2rem;
      font-weight: bold;
    }
    .login-container h1 .subtitle {
        color: #03BFCB;
        font-size: 1.5rem;
        display: block;
    }
    .login-container p.intro {
        font-size: 0.95rem;
        color: #B3B8CD;
        margin-bottom: 25px;
    }
    .input-group {
        position: relative;
        margin-bottom: 20px;
    }
    .input-group i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #03BFCB; /* Icon color */
    }
    input[type="text"],
    input[type="password"] {
      width: 100%;
      padding: 15px 15px 15px 45px; /* Padding for icon */
      border: 1px solid #2d2747; /* Subtle border */
      border-radius: 8px; /* Rounded corners */
      font-size: 16px;
      background-color: #1F1A36; /* Dark input background */
      color: #B3B8CD; /* Light text color */
      box-sizing: border-box;
      transition: border-color 0.3s ease;
    }
    input[type="text"]:focus,
    input[type="password"]:focus {
      outline: none;
      border-color: #03BFCB; /* Accent border on focus */
      box-shadow: 0 0 0 0.2rem rgba(3, 191, 203, 0.25);
    }
    button.login-btn {
      background-color: #03BFCB; /* Primary button color */
      border: none;
      padding: 15px;
      width: 100%;
      border-radius: 8px;
      color: #231E39; /* Dark text on light button */
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    button.login-btn i {
        margin-right: 8px;
    }
    button.login-btn:hover {
      background-color: #FEBB0B; /* Secondary accent on hover */
    }
    .register-link {
      margin-top: 25px;
      font-size: 0.9rem;
    }
    .register-link a {
      color: #FEBB0B; /* Accent color for link */
      text-decoration: none;
      font-weight: bold;
    }
    .register-link a:hover {
      text-decoration: underline;
    }
  </style>
